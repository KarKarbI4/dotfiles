############
# Settings #
############
background yes
use_xft yes
xftfont Liberation Sans:size=9
xftalpha 1
ximerama_head 0
update_interval 1.0
total_run_times 0
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
double_buffer yes
minimum_size 200 200
maximum_width 400 #335
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color 656667
default_shade_color 000000
default_outline_color 828282
default_bar_size 240 2
alignment top_right
gap_x 50
gap_y 100
no_buffers yes
uppercase no
cpu_avg_samples 4
override_utf8_locale no
pad_percents 2
##########
# Output #
##########
own_window_argb_value 0
own_window_colour 000000
TEXT
${alignr}${color #FFFFFF}${font ADELE:pixelsize=35}${cpu cpu1} % CPU1${font}
${alignr}${cpubar cpu1}
${alignr}${color #FFFFFF}${font ADELE:pixelsize=35}${cpu cpu2} % CPU2${font}
${alignr}${cpubar cpu2}
${alignr}${color #FFFFFF}${font ADELE:pixelsize=35}${cpu cpu3} % CPU3${font}
${alignr}${cpubar cpu3}
${alignr}${color #FFFFFF}${font ADELE:pixelsize=35}${cpu cpu4} % CPU4${font}
${alignr}${cpubar cpu4}
${alignr}${font ADELE:pixelsize=35}${voffset 15}${mem} | ${memperc} % RAM${font}
${alignr}${membar}
${alignr}${font ADELE:pixelsize=35}${voffset 15}${swap} | ${swapperc}% Swap${font}
${alignr}${swapbar}
${alignr}${font ADELE:pixelsize=35}${voffset 15}${fs_used /} | ${fs_used_perc /}% HDD${font}
${alignr}${fs_bar /}
${alignr}${font ADELE:pixelsize=17}${voffset 15}${kernel} ${machine}${font}
${alignr}${font ADELE:pixelsize=17}${voffset 15}${uptime} UPTIME${font}
